extends ../layout

block content
    .container
        .row
            .col-md-6
                h2 Your Folders
                ul
                    each folder in folders
                        li
                            a(href=`/users/${user._id}/${folder._id}`)= folder.name

            .col-md-6
                h2 Your Profile:
                a.btn.btn-primary(href=`/users/${user._id}`) #{user.username}

