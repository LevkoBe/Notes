extends ../layout

block content
    .container
        h2 Create Group
        form(action="/groups" method="POST")
            .form-group
                label(for="name") Group Name:
                input#name.form-control(type="text" name="name" placeholder="Enter group name" required)
            .form-group
                label Members:
                each friend in friends
                    .form-check
                        input.form-check-input(type="checkbox" id=`friend_${friend._id}` name="members" value=friend._id)
                        label.form-check-label(for=`friend_${friend._id}`)= friend.username
            button.btn.btn-primary(type="submit") Create Group
