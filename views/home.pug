extends layout

block content
    .container
        .row
            .col-md-6
                h2 Your Groups
                ul
                    each group in groups
                        li
                            a(href=`/groups/${group.id}`)= group.name
                a.btn.btn-primary(href="/groups/new") Create Group
            
            .col-md-6
                h2 Your Users
                ul
                    each user in users
                        li
                            a(href=`/users/${user.id}`)= user.username
                a.btn.btn-primary(href="/users/new") Add User
