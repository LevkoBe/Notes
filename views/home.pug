extends layout

block content
    .container
        .row
            .col-md-6
                h2 Your Groups
                ul
                    each group in groups
                        li
                            a(href=`/groups/${group.id}`)= group.name
                a.btn.btn-primary(href="/groups/new") Create Group
            
            .col-md-6
                h2 Your Notes
                ul
                    each note in notes
                        li
                            a(href=`/notes/${note._id}`)= note.title
                            p #{note.content}
                a.btn.btn-primary(href="/groups/new") Create Group

            .col-md-6
                h2 Your Profile:
                a.btn.btn-primary(href=`/users/${user._id}`) #{user.username}

            .col-md-6
                h2 Your Friends
                ul
                    each friend in friends
                        li
                            a.btn.btn-primary(href=`/users/${friend._id}`) #{friend.username}

                form#addFriendForm(action="/users/add-friend" method="post")
                    input(type="text" name="friendId" placeholder="Friend's User ID")
                    button.btn.btn-primary(type="submit") Add Friend
