extends ../layout

block content
    .container
        .row
            .col-md-6
            .col-md-6
                h2 Edit User
                form(action=`/users/${user.id}?_method=PUT` method="POST")
                    .form-group
                        label(for="username") Username:
                        input#username.form-control(type="text" name="username" value= user.username required)
                    .form-group
                        label(for="email") Email:
                        input#email.form-control(type="email" name="email" value= user.email required)
                    .form-group
                        label(for="password") Password:
                        input#password.form-control(type="password" name="password" placeholder="Enter new password")
                    button.btn.btn-primary(type="submit") Update User
