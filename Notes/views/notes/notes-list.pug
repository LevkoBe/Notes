extends ../layout

block content
    .container
        .row
            .col-md-6
                h2 Your Notes
                ul
                    each note in notes
                        li
                            a(href=`/notes/${note._id}`)= note.title
                            p #{note.content}

            .col-md-6
                h2 Your Profile:
                a.btn.btn-primary(href=`/users/${user._id}`) #{user.username}

