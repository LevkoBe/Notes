block content
    h1 Live Chat of the group "#{group.name}"
    #chat-messages
    form#chat-form
        input#message(type='text' placeholder='Type your message...')
        button(type='submit') Send

    script(src="https://cdn.socket.io/4.3.1/socket.io.min.js")
    script.
        const group = !{JSON.stringify(group)};
    script(src='/chat.js')
